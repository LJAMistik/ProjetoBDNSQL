{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/app.ts"
        }
    ],
    "functions": {
        "app.ts": {
            "runtime": "vercel-nodejs",
            "includeFiles": [
                "enums/**",
                "http/**",
                "middleware/**",
                "models/**",
                "public/**",
                "routes/**",
                "schemas/**",
                "validators/**"
            ]
        }
    }
}
